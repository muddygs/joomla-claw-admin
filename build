#!/bin/bash

OUTPUT=~/tmp/git-$(date +%F)
[ -d $OUTPUT ] && rm -rf $OUTPUT
mkdir -p $OUTPUT
git archive main | tar -xf - -C $OUTPUT

pushd $OUTPUT

cd component && zip -r ../package/packages/com_claw.zip . && cd -

# prepare media directory
rm -rf media
mkdir -p media/js
mkdir -p media/css
cd media_raw/js
## compile
/usr/bin/tsc
cd ../..
## copy
cp media_raw/joomla.asset.json media
cp media_raw/js/*.js* media/js
rm media/js/*.json

# Directories to append to main component package once admin is added
/usr/bin/zip -r package/packages/com_claw.zip media

cd library && /usr/bin/zip -r ../package/packages/lib_claw.zip . && cd -
#cd plugin    && zip -dr ../package/packages/plg_claw.zip . && cd -

cd package && /usr/bin/zip -r ../pkg_claw.zip . && cd -

# Build modules separately

cd modules/mod_claw_sponsors && /usr/bin/zip -r ../../package/packages/mod_claw_sponsors.zip . && cd -
cd modules/mod_claw_cart && /usr/bin/zip -r ../../package/packages/mod_claw_cart.zip . && cd -
cd modules/mod_claw_vendors && /usr/bin/zip -r ../../package/packages/mod_claw_vendors.zip . && cd -
cd modules/mod_claw_regbuttons && /usr/bin/zip -r ../../package/packages/mod_claw_regbuttons.zip . && cd -

VPACKAGE=`xmllint --xpath '/extension/version/text()' package/pkg_claw.xml`
VCOMPONENT=`xmllint --xpath '/extension/version/text()' component/claw.xml`
VLIB=`xmllint --xpath '/extension/version/text()' library/claw.xml`
#VMODCART="0.1.0"
#VMODSKILLS="0.1.2"
#VMODSPONSORS="0.1.0"
#VMODVENDORS="0.1.0"

echo "Build completed for:"
echo "  PACKAGE: $VPACKAGE"
echo "COMPONENT: $VCOMPONENT"
echo "  LIBRARY: $VLIB"

mv pkg_claw.zip pkg_claw_$VPACKAGE.zip


popd
