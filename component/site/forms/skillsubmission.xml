<?xml version="1.0" encoding="UTF-8"?>
<form>
  <field
    name="id"
    type="hidden"
    label="JGLOBAL_FIELD_ID_LABEL"
    class="readonly"
    default="0"
    readonly="true"
  />

  <field
    name="title"
    type="text"
    label="Class Title"
    required="true"
    maxLength="30"
  />

  <field
    name="length"
    type="list"
    label="Length (minutes)"
    description="Length of class/presentation"
    default="60"
    required="true">
      <option value="60">60</option>
      <option value="75">75</option>
      <option value="90">90</option>
      <option value="120">120</option>
  </field>

  <field 
    name="description"
    type="editor"
    label="Class Description"
    filter="safehtml"
    maxLength="1000"
  />

  <field
    name="comments"
    type="textarea"
    label="Comments"
    required="false"
    maxLength="255"
    filter="raw"
    rows="3"
    columns="00"
  />

</form>
