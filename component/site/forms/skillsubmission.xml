<?xml version="1.0" encoding="UTF-8"?>
<form>
  <field
    name="id"
    type="hidden"
    label="JGLOBAL_FIELD_ID_LABEL"
    class="readonly"
    default="0"
    readonly="true"
    filter="uint"
  />

  <field
    name="title"
    type="text"
    label="Class Title (50 character limit)"
    required="true"
    maxlength="50"
    filter="string"
  />

  <field
    name="length"
    type="list"
    label="Length (minutes)"
    description="Length of class/presentation"
    default="60"
    required="true">
      <option value="60">60</option>
      <option value="90">90</option>
      <option value="120">120</option>
  </field>

  <field 
    name="description"
    type="textarea"
    label="Class Description (please exclude information from above; 500 character limit)"
    maxlength="500"
    rows="10"
    required="true"
    filter="safehtml"
  />

  <field
    name="av"
    label="A/V Equipment Needed?"
    description="Let us know if you need A/V Equipment. We will follow up on details."
    type="radio"
    layout="joomla.form.field.radio.switcher"
    default="0"
    >
    <option value="0">JNO</option>
    <option value="1">JYES</option>
  </field>

  <field
    name="equipment_info"
    type="textarea"
    label="Class Equipment"
    description="List needed equipment (e.g., sling, rigging)"
    required="false"
    maxlength="255"
    filter="string"
    rows="3"
    columns="00"
  />

  <field
    name="copresenter_info"
    type="textarea"
    label="Copresenters"
    description="Contact information on any copresenters"
    required="false"
    maxlength="255"
    filter="string"
    rows="3"
    columns="00"
  />

  <field
    name="requirements_info"
    type="textarea"
    label="Requirements (prerequisites, gear to bring, etc.)"
    description="Describe class prerequisites and/or equipment/gear attendees should bring to class"
    required="false"
    maxlength="255"
    rows="3"
    columns="0"
    filter="string"
  />

  <field
    name="comments"
    type="textarea"
    label="Other Comments"
    required="false"
    maxlength="255"
    rows="3"
    columns="00"
    filter="string"
  />

</form>
