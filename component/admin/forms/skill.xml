<?xml version="1.0" encoding="UTF-8"?>
<form addfieldprefix="ClawCorp\Component\Claw\Administrator\Field">
  <field
    name="id"
    type="hidden"
    label="JGLOBAL_FIELD_ID_LABEL"
    class="readonly"
    default="0"
    readonly="true"
  />

  <field
    name="title"
    type="text"
    label="Class Title"
    required="true"
    maxLength="30"
  />

  <field
    name="event"
    type="ClawEventsList"
    label="Event Selection"
    required="true"
    multiple="false"
    default="_current_"
    validate="options"
    >
  </field>

  <field
    name="day"
    type="ClawDaysList"
    client="administrator"
    label="Event Day"
    dayfilter="fri,sat,sun"
    multiple="false"
  >
    <option value="">Select Day</option>
  </field>

  <field
    name="start_time"
    type="list"
    label="Start Time"
    required="true"
    default="">
      <option value="">Select a start time</option>
  </field>

  <field
    name="length"
    type="list"
    label="Length (minutes)"
    description="Length of class/presentation"
    default="60"
    required="true">
      <option value="30">30</option>
      <option value="45">45</option>
      <option value="60">60</option>
      <option value="75">75</option>
      <option value="90">90</option>
      <option value="105">105</option>
      <option value="120">120</option>
  </field>

  <field
    name="presenters"
    type="PresentersList"
    label="Presenter(s)"
    description="Select as least one presenter"
    multiple="true"
    layout="joomla.form.field.list-fancy-select"
    required="true"
  >
  </field>

  <field
    name="track"
    type="list"
    label="Track"
    description="Class Track"
    multiple="false"
    default="None"
    required="false"
  >
    <option value="None">None</option>
  </field>

  <field
    name="audience"
    type="checkboxes"
    label="Audience"
    description="Class Audience"
    multiple="true"
    default="open"
    required="true"
  >
    <option value="open">Open</option>
  </field>

  <field
    name="category"
    type="list"
    label="Category"
    description="Class Category"
    multiple="false"
    default="TBD"
    required="true"
  >
    <option value="TBD">TBD</option>
  </field>

  <field
    name="location"
    type="groupedlist"
    label="Location"
    multiple="false"
    layout="joomla.form.field.list-fancy-select"
    required="true"
  >
  </field>

  <field 
    name="description"
    type="editor"
    label="Class Description"
    filter="safehtml"
    maxLength="1000"
  />

  <field
    name="photo"
    type="accessiblemedia"
    label="Representative Photo"
    preview="true"
    required="false"
  />

  <field
    name="comments"
    type="text"
    label="Comments"
    required="false"
    maxLength="255"
  />

  <field
    name="published"
    type="list"
    label="JSTATUS"
    class="form-select-color-state"
    default="1"
    validate="options"
    >
    <option value="1">JPUBLISHED</option>
    <option value="0">JUNPUBLISHED</option>
    <option value="2">JARCHIVED</option>
    <option value="-2">JTRASHED</option>
  </field>


</form>
