<?xml version="1.0" encoding="UTF-8"?>
<form addfieldprefix="ClawCorp\Component\Claw\Administrator\Field">
  <field name="id"
    type="hidden"
    label="JGLOBAL_FIELD_ID_LABEL"
    class="readonly"
    default="0"
    readonly="true" />

  <field name="title"
    type="text"
    label="Class Title"
    required="true"
    maxLength="30" />

  <field name="event"
    type="ClawEventsList"
    label="Event Selection"
    required="true"
    multiple="false"
    default=""
    validate="options" />

  <field name="day"
    type="ClawDaysList"
    client="administrator"
    label="Event Day"
    dayfilter="fri,sat,sun"
    multiple="false">
    <option value="">Select Day</option>
  </field>

  <field name="time_slot"
    type="sql"
    label="Time Slot"
    required="false"
    value_field="text"
    query="SELECT value,text FROM #__claw_field_values WHERE `fieldname`='skill_time_slot' ORDER BY value"
    default="">
    <option value="">Select a time slot</option>
  </field>

  <field name="class_type"
    type="sql"
    label="Class Type"
    required="false"
    value_field="text"
    query="SELECT value,text FROM #__claw_field_values WHERE `fieldname`='skill_class_type' ORDER BY value"
    default="">
    <option value="">Select a class type</option>
  </field>

  <field name="owner"
    type="PresentersList"
    label="Primary Presenter"
    multiple="false"
    layout="joomla.form.field.list-fancy-select"
    required="true">
  </field>

  <field name="presenters"
    type="PresentersList"
    label="Co-Presenter(s)"
    multiple="true"
    layout="joomla.form.field.list-fancy-select"
    required="false">
  </field>

  <field name="track"
    type="sql"
    label="Track"
    description="Class Track"
    multiple="false"
    value_field="text"
    query="SELECT value,text FROM #__claw_field_values WHERE `fieldname`='skill_track' ORDER BY value"
    default=""
    required="false">
    <option value="">None</option>
  </field>

  <field name="category"
    type="sql"
    label="Category"
    description="Class Category"
    multiple="false"
    value_field="text"
    query="SELECT value,text FROM #__claw_field_values WHERE `fieldname`='skill_category' ORDER BY value"
    default=""
    required="false">
    <option value="">TBD</option>
  </field>

  <field name="location"
    type="LocationList"
    label="Location"
    required="false"
    layout="joomla.form.field.list-fancy-select">
    <option value="-1">Select Location</option>
  </field>

  <field name="description"
    type="editor"
    label="Class Description"
    filter="safehtml"
    maxLength="1000" />

  <field name="photo"
    type="accessiblemedia"
    label="Representative Photo"
    preview="true"
    required="false" />

  <field name="equipment_info"
    type="textarea"
    label="Equipment"
    description="List needed equipment (e.g., sling, rigging)"
    required="false"
    maxLength="255"
    filter="raw"
    rows="3"
    columns="00" />

  <field name="copresenter_info"
    type="textarea"
    label="Copresenters"
    description="Contact information on any copresenters"
    required="false"
    maxLength="255"
    filter="raw"
    rows="3"
    columns="00" />

  <field name="requirements_info"
    type="textarea"
    label="Requirements"
    description="Describe class prerequisites and/or equipment/gear attendees should bring to class"
    required="false"
    maxLength="255"
    filter="raw"
    rows="3"
    columns="00" />

  <field name="length_info"
    type="text"
    label="Requested length"
    required="true"
    pattern="\d{1,3}"
    default="0" />

  <field name="comments"
    type="textarea"
    label="Other Comments"
    required="false"
    maxLength="255"
    filter="raw"
    rows="3"
    columns="00" />

  <field name="published"
    type="list"
    label="JSTATUS"
    class="form-select-color-state"
    default="1"
    validate="options">
    <option value="1">JPUBLISHED</option>
    <option value="0">JUNPUBLISHED</option>
    <option value="2">JARCHIVED</option>
    <option value="-2">JTRASHED</option>
    <option value="3">New Submission</option>
  </field>


</form>
