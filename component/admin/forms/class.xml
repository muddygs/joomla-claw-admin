<?xml version="1.0" encoding="UTF-8"?>
<form>
  <field
    name="id"
    type="hidden"
    label="JGLOBAL_FIELD_ID_LABEL"
    class="readonly"
    default="0"
    readonly="true"
  />

  <field
    name="title"
    type="text"
    label="Class Title"
    required="true"
    maxLength="30"
  />

  <field
    name="event"
    type="list"
    label="Event Selection"
    required="true"
    default=""
    validate="options"
    >
    <option value="">Select Primary Event</option>
  </field>

  <field
    name="day"
    type="list"
    client="administrator"
    label="Event Day"
    description="Select day"
    multiple="false"
    default="0"
  >
  </field>

  <field
    name="start_time"
    type="time"
    label="Start Time"
    description="Start time of class"
    required="true"
    min="0"
    max="2359"
    step="15"
    default="0"
  />

  <field
    name="length"
    type="number"
    label="Length (minutes)"
    description="Length of class/presentation"
    min="0"
    max="120"
    step="15"
    required="true"
  />

  <field
    name="presenters"
    type="list"
    label="Presenter(s)"
    description="Select as least one presenter"
    multiple="true"
    layout="joomla.form.field.list-fancy-select"
    default=""
    required="true"
  >
  </field>

  <field
    name="track"
    type="list"
    label="Track"
    description="Class Track"
    multiple="true"
    layout="joomla.form.field.list-fancy-select"
    default=""
    required="false"
  >
  </field>

  <field
    name="audience"
    type="list"
    label="Audience"
    description="Class Audience"
    multiple="true"
    default=""
    required="true"
  >
  </field>

  <field
    name="category"
    type="list"
    label="Category"
    description="Class Category"
    multiple="true"
    layout="joomla.form.field.list-fancy-select"
    default=""
    required="true"
  >
  </field>

  <field
    name="location"
    type="list"
    label="Location"
    description="Location/Room"
    multiple="false"
    layout="joomla.form.field.list-fancy-select"
    default=""
    required="true"
  >
  </field>

  <field 
    name="description"
    type="editor"
    label="Class Description"
    filter="safehtml"
    maxLength="1000"
  />

  <field
    name="photo"
    type="file"
    label="Represtative Photo"
    description="A representative picture to go with your class"
    accept="image/png, image/jpeg"
    required="false"
  />

  <field
    name="copresenter"
    type="text"
    label="Copresenter"
    description="Contact information to other presenters"
    required="false"
    maxLength="255"
  />

  <field
    name="comments"
    type="text"
    label="Comments"
    required="false"
    maxLength="255"
  />

  <field
    name="published"
    type="list"
    label="JSTATUS"
    class="form-select-color-state"
    default="1"
    validate="options"
    >
    <option value="1">JPUBLISHED</option>
    <option value="0">JUNPUBLISHED</option>
    <option value="2">JARCHIVED</option>
    <option value="-2">JTRASHED</option>
  </field>


</form>
