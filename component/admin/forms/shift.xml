<?xml version="1.0" encoding="UTF-8"?>
<form addfieldprefix="ClawCorp\Component\Claw\Administrator\Field">
  <field
    name="id"
    type="hidden"
    label="JGLOBAL_FIELD_ID_LABEL"
    class="readonly"
    default="0"
    readonly="true"
  />

  <field
    name="title"
    type="text"
    label="Shift Title"
    required="true"
    maxLength="30"
  />

  <field
    name="description"
    type="text"
    label="Shift Description"
    required="true"
    maxLength="30"
  />

  <field
    name="event"
    type="ClawEventsList"
    label="Event"
    required="true"
  />

  <field
    name="shift_area"
    type="sql"
    label="Shift Area"
    required="false"
    value_field="text"
    query="SELECT value,text FROM #__claw_field_values WHERE `fieldname`='shift_shift_area' ORDER BY value"
    default="">
      <option value="tbd">TBD</option>
  </field>
  <field
    name="requirements"
    type="text"
    label="Shift Requirements/Restrictions"
    required="true"
    maxLength="30"
  />

  <field
    name="coordinators"
    type="UsersByGroup"
    label="Managers"
    multiple="true"
    layout="joomla.form.field.list-fancy-select"
    default=""
    groupnames="VolunteerCoord,Super Users"
    required="true"
  />

  <field
    name="grid"
    type="subform"
    label="Grid"
    multiple="true"
    min="1"
    required="true"
    formsource="/administrator/components/com_claw/forms/shiftgridrow.xml"
    layout="shiftgridrow"
  >

  </field>

  <field
    name="published"
    type="list"
    label="JSTATUS"
    class="form-select-color-state"
    default="1"
    validate="options"
    >
    <option value="1">JPUBLISHED</option>
    <option value="0">JUNPUBLISHED</option>
    <option value="2">JARCHIVED</option>
    <option value="-2">JTRASHED</option>
  </field>
</form>
