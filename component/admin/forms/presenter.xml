<?xml version="1.0" encoding="UTF-8"?>
<form addfieldprefix="ClawCorp\Component\Claw\Administrator\Field">
  <field
    name="id"
    type="hidden"
    label="JGLOBAL_FIELD_ID_LABEL"
    class="readonly"
    default="0"
    readonly="true"
  />

  <field
    name="name"
    type="text"
    label="Public Name:"
    required="true"
    maxLength="30"
    filter="string"
  />

  <field
    name="legal_name"
    type="text"
    label="Legal Name:"
    required="true"
    maxLength="30"
    filter="string"
  />

  <field
    name="event"
    type="ClawEventsList"
    label="Event Selection:"
    required="true"
    multiple="false"
    default=""
    validate="options"
    filter="string"
  />

  <field
    name="social_media"
    type="text"
    label="Social Media Tags:"
    description="@twitter, @instagram, etc."
    required="false"
    maxLength="255"
    filter="string"
  />

  <field
    name="phone"
    type="text"
    label="Phone Number:"
    required="false"
    maxLength="255"
    filter="string"
  />

  <field
    name="phone_info"
    type="checkboxes"
    label="Phone Info:"
  >
    <option value="Cell">This is a cell phone number</option>
    <option value="SMS">It is OK to SMS (text) this number</option>
  </field>

  <field
    name="email"
    type="text"
    label="Email:"
    required="true"
    maxLength="255"
    filter="string"
  />

  <field
    name="bio"
    type="editor"
    label="Biography"
    filter="safehtml"
    editor="alternative"
    maxLength="1000"
    required="true"
  />

  <field
    name="photo"
    type="hidden"
    default=""
  />

  <field
    name="photo_upload"
    type="file"
    label="Photo Upload"
    description="Upload new (or replace existing) representative photo; online version automatically resized"
    accept="image/png, image/jpeg"
  />


  <field
    name="arrival"
    type="checkboxes"
    label="Availability"
  >
    <option value="Any">Any (Fri-Sun)</option>
    <option value="Fri">Friday</option>
    <option value="Sat">Saturday</option>
    <option value="Sun">Sunday</option>
  </field>

  <field
    name="copresenter"
    type="checkbox"
    label="Co-Presenter"
  />

  <field
    name="copresenting"
    type="text"
    label="Co-Presenting Info"
    required="false"
    maxLength="255"
    showon="copresenter:1"
    filter="string"
  />

  <field
    name="comments"
    type="text"
    label="Comments"
    required="false"
    maxLength="255"
    filter="string"
  />

  <field
    name="ownership"
    type="radio"
    label="Biography Ownership:"
    description="If set to admin, you will need to issue a coupon for registration."
    required="true"
    default="1"
    class="btn-group btn-group-yesno"
  >
    <option value="1">By User</option>
    <option value="0">By Admin</option>
  </field>

  <field
    name="uid"
    type="user"
    label="User Ownership:"
    required="false"
    readonly="false"
    filter="uint"
    showon="ownership:1"
  />

  <field
    name="submission_date"
    type="text"
    label="Submission Date"
    required="false"
    maxLength="255"
    readonly="true"
  />

  <field
    name="mtime"
    type="text"
    label="Last Modified"
    required="false"
    maxLength="255"
    readonly="true"
  />

  <field
    name="published"
    type="list"
    label="JSTATUS"
    class="form-select-color-state"
    default="1"
    validate="options"
  >
    <option value="1">JPUBLISHED</option>
    <option value="0">JUNPUBLISHED</option>
    <option value="2">JARCHIVED</option>
    <option value="-2">JTRASHED</option>
    <option value="3">New Submission</option>
  </field>


</form>
