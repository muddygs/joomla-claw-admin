<?xml version="1.0" encoding="UTF-8"?>
<form addfieldprefix="ClawCorp\Component\Claw\Administrator\Field">
  <field name="id"
    type="hidden"
    label="JGLOBAL_FIELD_ID_LABEL"
    class="readonly"
    default="0"
    readonly="true" />

  <field name="catid"
    type="LocationList"
    label="Parent Location"
    description="Select parent location if this is a sub-location"
    multiple="false"
    layout="joomla.form.field.list-fancy-select"
    default="">
    <option value="">None</option>
  </field>

  <field name="ordering"
    type="ordering"
    label="Ordering"
    content_type="com_claw.location"
    title="Ordering" />

  <field name="value"
    type="text"
    label="Location"
    required="true"
    maxLength="255" />

  <field name="alias"
    type="sql"
    label="EB Location"
    required="false"
    key_field="alias"
    value_field="name"
    query="SELECT name,alias FROM #__eb_locations WHERE published=1 ORDER BY name"
    default="">
    <option value="">None</option>
  </field>

</form>