<?xml version="1.0" encoding="UTF-8"?>
<form>
  <field
    name="time"
    type="time"
    label="Time"
    description="Start time of shift"
    required="true"
    min="0"
    max="2359"
    step="15"
    default="0"
    col="2"
  />
  <field
    name="length"
    type="number"
    label="Hours"
    description="Length in hours (must be in quarter-hour increments)"
    min="0"
    max="12"
    step=".25"
    required="true"
    size="2"
    col="2"
    default="4"
  />

  <field
    name="weight"
    type="list"
    label="Weight"
    description="Shift Weight (default is 1)"
    required="true"
    default="1"
    validate="options"
  >
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
  </field>

  <field
    name="tue"
    type="number"
    label="Tue"
    min="0"
    step="1"
    required="true"
    size="2"
    default="0"
    col="1"
  />
  <field
    name="wed"
    type="number"
    label="Wed"
    min="0"
    step="1"
    required="true"
    size="2"
    default="0"
    col="1"
  />
  <field
    name="thu"
    type="number"
    label="Thu"
    min="0"
    step="1"
    required="true"
    size="2"
    default="0"
    col="1"
  />
  <field
    name="fri"
    type="number"
    label="Fri"
    min="0"
    step="1"
    required="true"
    size="2"
    default="0"
    col="1"
  />
  <field
    name="sat"
    type="number"
    label="Sat"
    min="0"
    step="1"
    required="true"
    size="2"
    default="0"
    col="1"
  />
  <field
    name="sun"
    type="number"
    label="Sun"
    min="0"
    step="1"
    required="true"
    size="2"
    default="0"
    col="1"
  />
  <field
    name="mon"
    type="number"
    label="Mon"
    min="0"
    step="1"
    required="true"
    size="2"
    default="0"
    col="1"
  />

  <field name="tue_eventid" type="hidden" default="0" />
  <field name="wed_eventid" type="hidden" default="0" />
  <field name="thu_eventid" type="hidden" default="0" />
  <field name="fri_eventid" type="hidden" default="0" />
  <field name="sat_eventid" type="hidden" default="0" />
  <field name="sun_eventid" type="hidden" default="0" />
  <field name="mon_eventid" type="hidden" default="0" />
  <field name="grid_id" type="hidden" default="" />

</form>
