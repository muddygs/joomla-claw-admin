<?xml version="1.0" encoding="UTF-8"?>
<form addfieldprefix="ClawCorp\Component\Claw\Administrator\Field">
  <field
    name="id"
    type="hidden"
    label="JGLOBAL_FIELD_ID_LABEL"
    class="readonly"
    default="0"
    readonly="true"
  />

  <field
    name="eventAlias"
    type="ClawEventsList"
    label="Event Selection"
    required="true"
    multiple="false"
    default=""
    validate="options"
  />

  <field name="published"
    type="list"
    label="JSTATUS"
    class="form-select-color-state"
    default="1"
    validate="options">
    <option value="1">JPUBLISHED</option>
    <option value="0">JUNPUBLISHED</option>
  </field>

  <field
    name="title"
    type="text"
    label="Event Title:"
    required="true"
    maxlength="255"
    filter="string"
  />

  <field
    name="description"
    type="textarea"
    label="Event Description:"
    description="Event description (used for short and long; HTML allowed)"
    required="false"
    rows="5"
    cols="40"
    filter="safehtml"
  />

  <field
    name="alias"
    type="text"
    label="Event Alias:"
    required="true"
    class="readonly"
    default="Assigned during publication"
    readonly="true"
  />

  <field
    name="eventPackageType"
    type="ClawEventPackageTypeList"
    label="Ticket Type:"
    required="true"
    default=""
    filter="string"
  >
    <option value="">Select Package Type</option>
  </field>

  <field
    name="packageInfoType"
    type="PackageInfoTypesList"
    label="Package Type:"
    required="true"
    default="0"
  />

  <field
    name="couponKey"
    type="text"
    label="Coupon Key:"
    required="false"
    maxlength="1"
    filter="string"
  />

  <field
    name="couponValue"
    type="text"
    label="Coupon Value ($):"
    required="false"
    filter="float"
    default="0.00"
  />

  <field
    name="fee"
    type="text"
    label="Event Fee ($):"
    required="true"
    filter="float"
    default="0.00"
    showon="packageInfoType!:7"
  />

  <field
    name="event_id"
    type="text"
    label="Event Booking Event:"
    description="Event Assigned at Deployment"
    readonly="true"
    class="readonly"
  />

  <field
    name="category"
    type="EbCategoryList"
    label="Event Booking Category:"
    required="true"
  />

  <field
    addruleprefix="ClawCorp\Component\Claw\Administrator\Field\Rule"
    name="group_id"
    type="accesslevel"
    label="Registration Access Level:"
    description="Select Joomla &quot;Registered&quot; viewing access level"
    default="0"
    validate="simpleacl"
    multiple="false"
  />

  <field
    name="minShifts"
    type="integer"
    label="Minimum Shifts:"
    description="Minimum number of shifts required to book"
    required="true"
    default="0"
    first="0"
    last="10"
    step="1"
    showon="isVolunteer:1"
  />

  <field
    name="requiresCoupon"
    type="radio"
    label="Requires Coupon:"
    required="true"
    default="0"
    class="btn-group btn-group-yesno"
  >
    <option value="1">JYES</option>
    <option value="0">JNO</option>
  </field>

  <field
    name="couponAccessGroups"
    type="UserGroupList"
    label="Coupon Access Groups:"
    description="User groups permitted to issue this coupon."
    required="false"
    multiple="true"
    default=""
    layout="joomla.form.field.list-fancy-select"
  >
    <option value="">Select Groups</option>
  </field>

  <field
    name="authNetProfile"
    type="radio"
    label="Generate Auth.Net Payment Profile:"
    required="true"
    default="0"
    class="btn-group btn-group-yesno"
  >
    <option value="1">JYES</option>
    <option value="0">JNO</option>
  </field>

  <field
    name="day"
    type="ClawDaysList"
    label="Event Day"
    description="Select day"
    multiple="false"
    default="0"
    showon="packageInfoType:2,6,8,11"
  >
  </field>

  <field
    name="start_time"
    type="time"
    label="Start Time"
    description="Start time of event"
    required="true"
    min="00:00"
    max="23:59"
    default="00:00"
    showon="packageInfoType:2,6,8,11"
  />

  <field
    name="end_time"
    type="time"
    label="Ending Time"
    description="End time of event (less than start goes to next day)"
    required="true"
    min="00:00"
    max="23:59"
    default="00:00"
    showon="packageInfoType:2,6,8,11"
  />

  <field
    name="isVolunteer"
    type="radio"
    label="Volunteer Event:"
    required="true"
    default="0"
    class="btn-group btn-group-yesno"
    showon="packageInfoType:1"
  >
    <option value="1">JYES</option>
    <option value="0">JNO</option>
  </field>

  <field
    name="bundleDiscount"
    type="text"
    label="Bundle Discount ($):"
    description="Discount applied when bundled with volunteer package."
    required="true"
    filter="uint"
    default="0"
    showon="packageInfoType:2,3"
  />

  <field
    name="badgeValue"
    type="text"
    label="Badge Value:"
    description="Very short text to print on badge."
    required="false"
    filter="string"
    default=""
    maxlength="4"
    showon="packageInfoType:2"
  />

  <field
    name="couponOnly"
    type="radio"
    label="Coupon Only:"
    description="Use for duplicate events that map to a different package type."
    required="true"
    default="0"
    class="btn-group btn-group-yesno"
  >
    <option value="1">JYES</option>
    <option value="0">JNO</option>
  </field>

  <!-- This field needs to sync with Deploy.php::Packages() to verify meta is defined -->
  <field
    name="meta"
    type="list"
    label="Meta Events for Combos (VIP, Coordinator, Board, Combo Meals):"
    description="Select combo events &lt;b&gt;(must be performed after events are deployed)&lt;/b&gt;."
    required="false"
    default=""
    layout="joomla.form.field.list-fancy-select"
    multiple="true"
    showon="packageInfoType:3[OR]eventPackageType:3[OR]eventPackageType:32[OR]eventPackageType:20"
  />
</form>
