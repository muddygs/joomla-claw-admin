<?xml version="1.0" encoding="utf-8"?>
<form>
  <fields name="request">
    <fieldset name="basic">
      <field name="id"
        type="text"
        label="ID"
        readonly="true" />
      <field name="published"
        type="list"
        label="Published"
        description="Select Yes to publish this vendor."
        default="1">
        <option value="1">Yes</option>
        <option value="0">No</option>
      </field>
      <field name="name"
        type="text"
        label="Name"
        required="true" />
      <field name="description"
        type="text"
        label="Description"
        required="true" />
      <field name="logo"
        type="media"
        label="Logo"
        description="Upload the vendor's logo."
        directory="images" 
      />
      <field name="expires"
        type="calendar"
        label="Expires"
        description="Select the expiration date for this vendor."
      />
      <field name="mtime"
        type="text"
        label="Modified Time"
        readonly="true" />
    </fieldset>
  </fields>
</form>