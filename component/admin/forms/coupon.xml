<?xml version="1.0" encoding="UTF-8"?>
<form addfieldprefix="ClawCorp\Component\Claw\Administrator\Field">
  <field
    name="event"
    type="ClawEventsList"
    label="Event"
    required="true"
  />

  <field
    name="quantity"
    type="number"
    label="Quantity"
    minvalue="1"
    maxvalue="10"
    required="true"
    default="1"
  />

  <field
    name="packagetype"
    type="list"
    label="Package Type"
    description="Select package type"
    multiple="false"
    default="0"
  >
    <option value="0">Select Package Type</option>
  </field>

  <field 
    name="addons"
    type="checkboxes"
    label="Select Addons"
  />

  <field
    name="value"
    type="text"
    label="Total Value ($)"
    readonly="true"
    default="0"
  />

  <field
    name="name"
    type="textarea"
    label="Name(s)"
    description="Enter name(s) of attendee(s)"
    required="true"
    rows="5"
    hint="Enter name(s) of attendee(s)"
  />

  <field
    name="email"
    type="textarea"
    label="Email(s)"
    description="Enter emails(s) of attendee(s)"
    required="true"
    rows="5"
    hint="noreply@clawinfo.org"
    onblur="getEmailStatus(this)"
  />

  <field
    name="emailOverride"
    type="checkbox"
    label="Override Email Check"
    value="1"
  />
</form>

