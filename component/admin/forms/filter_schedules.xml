<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="ClawCorp\Component\Claw\Administrator\Field">
	<fields name="filter">

		<field
			name="search"
			type="text"
			label="Search"
			description="Value search"
			hint="JSEARCH_FILTER"
		/>
		<field
			name="published"
			type="status"
			label="JSTATUS"
			onchange="this.form.submit();"
			>
			<option value="">JOPTION_SELECT_PUBLISHED</option>
		</field>

    <field name="event"
      type="ClawEventsList"
      label="Event Filter"
      default="_current_"
      onchange="this.form.submit();">
      <option value="_all_">All Events</option>
      <option value="_current_">Current Event</option>
    </field>

		<field
		  name="dayfilter"
			type="list"
			label="Day"
			onchange="this.form.submit();"
			>
			<option value="">Select Day</option>
			<option value="Wed">Wed</option>
			<option value="Thu">Thu</option>
			<option value="Fri">Fri</option>
			<option value="Sat">Sat</option>
			<option value="Sun">Sun</option>
		</field>
	</fields>

	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="JGLOBAL_SORT_BY"
			default="a.day a.start_time ASC"
			validate="options"
			onchange="this.form.submit();"
			>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="a.day ASC">Day</option>
			<option value="a.event_title ASC">Title</option>
			<option value="a.start_time ASC">Start Time</option>
		</field>

		<field
			name="limit"
			type="limitbox"
			label="JGLOBAL_LIST_LIMIT"
			default="25"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
