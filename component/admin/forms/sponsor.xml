<?xml version="1.0" encoding="UTF-8"?>
<form>
  <field
    name="id"
    type="hidden"
    label="JGLOBAL_FIELD_ID_LABEL"
    class="readonly"
    default="0"
    readonly="true"
  />

  <field
    name="name"
    type="text"
    label="Sponsor Name"
    required="true"
    maxLength="30"
  />

  <field
    name="link"
    type="text"
    label="Link"
    description="Include full URL including http/https"
    required="false"
    maxLength="255"
  />

  <field
    name="type"
    type="list"
    label="Sponsor Type"
    required="true"
    default=""
    validate="options"
    >
    <option value="">Select Sponsor Type</option>
    <!-- <option value="1">Sponsor</option>
    <option value="2">Sustaining</option>
    <option value="6">Legacy Sustaining</option>
    <option value="3">Master</option>
    <option value="5">Legacy Master</option>
    <option value="4">Media</option> -->
  </field>

  <field
    type="media"
    name="logo_small"
    label="Small Logo"
    descript="Should be 100x100 pixels"
    preview="tooltip"
    preview_width="200"
    preview_height="100"
  >
  </field>

  <field
    type="media"
    name="logo_large"
    label="Large Logo"
    descript="Should be 300x300 pixels"
    preview="tooltip"
    preview_width="200"
    preview_height="100"
  >
  </field>

  <field
    name="ordering"
    type="text"
    label="Ordering"
    required="true"
    maxLength="5"
  />

  <field
    name="expires"
    type="calendar"
    label="Expiration Date"
    default="now +6 months"
    description="Leave blank to none"
    minyear="0"
  />

  <!-- <field
    name="mtime"
    type="calendar"
    label="Last Edit"
    readonly="true"
    format="%Y-%m-%d %H:%M:%S"
    default="now"
  /> -->

  <field
    name="published"
    type="list"
    label="JSTATUS"
    class="form-select-color-state"
    default="1"
    validate="options"
    >
    <option value="1">JPUBLISHED</option>
    <option value="0">JUNPUBLISHED</option>
    <option value="2">JARCHIVED</option>
    <option value="-2">JTRASHED</option>
  </field>


</form>