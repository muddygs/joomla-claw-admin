<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="ClawCorp\Component\Claw\Administrator\Field">
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="Search"
			description="Name search"
			hint="JSEARCH_FILTER"
		/>

		<field name="event"
      type="ClawEventsList"
      label="Event Filter"
      default="_current_"
      onchange="this.form.submit();">
      <option value="_all_">All Events</option>
      <option value="_current_">Current Event</option>
    </field>
	</fields>

	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="JGLOBAL_SORT_BY"
			default="a.name ASC"
			onchange="this.form.submit();"
			>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="a.name ASC">Name Ascending</option>
			<option value="a.name DESC">Name Descending</option>
			<option value="a.id ASC">JGRID_HEADING_ID_ASC</option>
			<option value="a.id DESC">JGRID_HEADING_ID_DESC</option>
		</field>

		<field
			name="limit"
			type="limitbox"
			label="JGLOBAL_LIST_LIMIT"
			default="All"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
