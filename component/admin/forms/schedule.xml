<?xml version="1.0" encoding="UTF-8"?>
<form addfieldprefix="ClawCorp\Component\Claw\Administrator\Field">
  <field
    name="id"
    type="hidden"
    label="JGLOBAL_FIELD_ID_LABEL"
    class="readonly"
    default="0"
    readonly="true"
  />

  <field
    name="event"
    type="ClawEventsList"
    label="Event"
    required="true"
  />

  <field
    name="published"
    type="list"
    label="JSTATUS"
    class="form-select-color-state"
    default="1"
    validate="options"
    >
    <option value="1">JPUBLISHED</option>
    <option value="0">JUNPUBLISHED</option>
    <option value="2">JARCHIVED</option>
    <option value="-2">JTRASHED</option>
  </field>

  <field
    name="day"
    type="list"
    client="administrator"
    label="Event Day"
    description="Select day"
    multiple="false"
    default="0"
  >
  </field>

  <field
    name="start_time"
    type="time"
    label="Start Time"
    description="Start time of event"
    required="true"
    min="0"
    max="2359"
    step="15"
    default="0"
  />
  <field
    name="end_time"
    type="time"
    label="Ending Time"
    description="End time of event"
    required="true"
    min="0"
    max="2359"
    step="15"
    default="0"
  />

  <field
    name="featured"
    label="Featured Event"
    description="Featured events always appear first in the frontend layout"
    value="1"
    type="radio"
    layout="joomla.form.field.radio.switcher"
    default="0"
    >
    <option value="0">JNO</option>
    <option value="1">JYES</option>
  </field>


  <field
    name="event_title"
    type="text"
    label="Event Title"
    filter="safehtml"
    required="true"
  />

  <field
    name="fee_event"
    type="checkboxes"
    label="Purchase Options"
    default="0"
    required="true"
  >
    <option value="0">Included</option>
    <option value="1">Preorder Required</option>
    <option value="2">Door Purchase Available</option>
    <option value="3">At Door Only</option>
  </field>

  <field
    name="event_id"
    type="list"
    client="administrator"
    label="Event Booking Event"
    description="Select Event"
    multiple="false"
    default="0"
  >
    <option value="0">None</option>
  </field>

  <field 
    name="event_description"
    type="editor"
    label="Description"
    filter="safehtml"
    required="true"
  />

  <field 
    name="onsite_description"
    type="editor"
    label="Onsite Description"
    filter="safehtml"
  />

  <field
    name="location"
    type="LocationList"
    label="Location"
    required="true"
    layout="joomla.form.field.list-fancy-select"
  >
    <option value="">Select Location</option>
  </field>

  <field
    name="sponsors"
    type="list"
    label="Sponsors"
    description="Select sponsors"
    multiple="true"
    layout="joomla.form.field.list-fancy-select"
    default=""
    required="false"
  >
  </field>

  <field
    name="poster"
    type="accessiblemedia"
    label="Event Poster"
    description="Should be 600 pixels wide"
    preview="tooltip"
    preview_width="200"
    preview_height="100"
  />

  <field
    name="sort_order"
    type="hidden"
    label="Sort Order"
  />
  <field
    name="modification_time"
    type="hidden"
    label="Modification Time"
  />
</form>
